#! /usr/bin/env bash
### Wynton HPC Shares
###
### Usage:
###  wynton-shares <command> [options]
###
### Commands:
###  list             List all shareholders and their shares
###  total            Total number of queue slots
###
### Options:
###  --funits         Include functional units (FU) in output (slow)
###  --version        Display version
###
### Examples:
###  wynton shares list --funits --project salilab
###  wynton shares list --funits
###
### Version: 0.0.1
### Copyright: Henrik Bengtsson (2019)
### License: GPL (>= 2.1) [https://www.gnu.org/licenses/gpl.html]
call="$0 $*"


# -------------------------------------------------------------------------
# CORE
# -------------------------------------------------------------------------
function mecho() { echo "$@" 1>&2; }

function mdebug() {
    if $debug; then
        mecho "[DEBUG] $*";
    fi
}
function merror() {
    mecho "ERROR: $*";
    exit 1
}
function vecho() {
    if $verbose; then
        echo "$@";
    fi
}

function version() {
    grep -E "^###[ ]*Version:[ ]*" "$0" | sed 's/###[ ]*Version:[ ]*//g'
}

function help() {
    local res
    res=$(grep "^###" "$0" | grep -vE '^(####|### whatis: )' | cut -b 5-)
    if [[ ${UCSF_WYNTON_TOOLS} == true ]]; then
        res=$(printf "%s\\n" "${res[@]}" | sed -E 's/([^/])wynton-([a-z]+)/\1wynton \2/')
    fi
    printf "%s\\n" "${res[@]}"
}


# -------------------------------------------------------------------------
# SPECIFIC
# -------------------------------------------------------------------------


# -------------------------------------------------------------------------
# MAIN
# -------------------------------------------------------------------------
## Actions
action=help

## Options
debug=false
verbose=false
funits=false
project=
queue="member.q"

# Parse command-line options
while [[ $# -gt 0 ]]; do
    if test "$1" == "--help"; then
        action=help
    elif test "$1" == "--version"; then
        action=version
    elif test "$1" == "--funits"; then
        funits=true
    elif test "$1" == "list"; then
        action=$1
    elif test "$1" == "total"; then
        action=$1
    elif test "$1" == "tsv"; then
        action=$1
    elif test "$1" == "--project"; then
        shift
        project=$1
#    elif test "$1" == "--queue"; then
#        shift
#        queue=$1
    elif test "$1" == "--debug"; then
        debug=true
    elif test "$1" == "--verbose"; then
        verbose=true
    else
        extras="$extras $1"
    fi
    shift
done

if $debug; then
    mdebug "call: $call"
    mdebug "action: $action"
    mdebug "verbose: $verbose"
fi

if [[ $action == "version" ]]; then
    version
    exit 0
elif [[ $action == "help" ]]; then
    help 
    exit 0
fi


function slots_raw() {
    SGE_SINGLE_LINE=true qconf -srqs member_queue_limits | grep -F "queues ${queue} to slots=" | sed -E "s/(.*projects |queues ${queue} to slots=)//g"
}

function slots_total() {
    local slots_raw
    slots_raw=$1
    echo "${slots_raw}" | awk '{ total+=$2 } END { print total }'
}

function funits_slots_total() {
    raw=$(funits_slots_all_projects)
    echo "${raw}" | awk '{ funits+=$1; slots+=$2 } END { printf "%6d %11d total\n", funits, slots }'
}

function slots_all_projects() {
    local slots_raw
    local slots_total
    local slots_per_project
    slots_raw=$1
    
    echo "queue_slots project"
    slots_total=$(slots_total "${slots_raw}")
    slots_per_project=$(echo "${slots_raw}" | awk -v total="${slots_total}" '{ printf "%11d %s\n", $2, $1 }' | sort -r)
    echo "${slots_per_project}"
}

function slots_one_project() {
    local res
    local project
    project=$1
    res=$(slots_all_projects "$(slots_raw)")
    echo "queue_slots project"
    echo "${res}" | grep -E "[ ]${project}"
}

function funits_slots_one_project() {
    local res
    local project
    local funits
    project=$1
    res=$(slots_one_project "${project}")
    echo "funits queue_slots project"
    funits=$(funits_one_project "${project}")
    printf "%6d " "${funits}"
    echo "${res}" | grep -E "[ ]${project}"
}

function funits_slots_all_projects() {
    local res
    local projects
    local project
    local funits
    res=$(slots_all_projects "$(slots_raw)")
    echo "funits queue_slots project"
    projects=$(echo "${res}" | awk 'NR > 1 { print $2 }')
    for project in ${projects[*]}; do
      IFS="," read -r -a subprojects <<< "$project"
      subfunits=()
      funits=0
      for subproject in ${subprojects[*]}; do
        t=$(funits_one_project "${subproject}")
        subfunits+=(t)
        funits=$((funits + t))
      done
      printf "%6d " "${funits}"
      echo "${res}" | grep -E "[ ]${project}"
    done
}

function funits_one_project() {
    qconf -sprj "$1" | grep "fshare" | sed -E 's/fshare[ ]+//'
}


if [[ $action == "list" ]]; then
    if [[ -n "${project}" ]]; then
        ## List a single project
        if $funits; then
            funits_slots_one_project "${project}"
        else
            slots_one_project "${project}"
        fi
    else
        ## List all projects
        if $funits; then
            funits_slots_all_projects "$(slots_raw)"
        else
            slots_all_projects "$(slots_raw)"
        fi    
    fi
elif [[ $action == "total" ]]; then
    if $funits; then
      echo "funits queue_slots project"
      funits_slots_total
    else
      echo "queue_slots project"
      printf "%11d total\n" "$(slots_total "$(slots_raw)")"
    fi
elif [[ $action == "tsv" ]]; then
    data=$(wynton shares list --funits | awk 'BEGIN {OFS="\t";} { print $1, $2, $3, $4, $5}')
    echo "# Created by: ${USER}"
    echo "# Created on: $(date --rfc-3339=seconds)"
    echo "${data}" | awk 'NR > 1 { funits+=$1; slots+=$2 } END { printf "# Total funits: %d\n# Total queue_slots: %d\n# Number of projects: %d\n", funits, slots, NR-1 }'
    
    echo "${data}"
fi
